generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * =========================
 * Core Auth / Users
 * =========================
 */
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String?  @unique
  passwordHash String
  avatar       String?
  createdAt    DateTime @default(now())
  role         Role     @default(STUDENT)

  folders    Folder[]
  sets       StudySet[]
  likes      Like[]
  studyDays  StudyDay[]
  activities StudyActivity[] // lowerCamelCase field name
  badges     UserBadge[]

  // BKT
  mastery   UserSkillMastery[]
  responses Response[]

  // Personal library of skills
  userSkills  UserSkill[]
  DuelSession DuelSession[]
  DuelPlayer  DuelPlayer[]

  @@index([createdAt])
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

/**
 * =========================
 * Organization: Folders/Sets/Cards
 * =========================
 */
model Folder {
  id        String     @id @default(cuid())
  name      String
  owner     User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sets      StudySet[]

  @@index([ownerId, createdAt])
}

model StudySet {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     String
  folder      Folder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)
  folderId    String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cards   Card[]
  likedBy Like[]

  // BKT: optional default skill for new cards in this set (can be overridden per card)
  defaultSkill   Skill?        @relation("StudySet_defaultSkill", fields: [defaultSkillId], references: [id])
  defaultSkillId String?
  DuelSession    DuelSession[]

  @@index([ownerId, createdAt])
  @@index([folderId, createdAt])
  @@index([defaultSkillId])
}

model Card {
  id         String   @id @default(cuid())
  term       String
  definition String
  set        StudySet @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId      String
  position   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // distinguish “inherit default” from explicit per-card skill
  inheritDefault Boolean @default(true)

  // Optional media
  imageUrl String?
  imageAlt String?

  // BKT links
  skills    CardSkill[]
  responses Response[]

  @@index([setId, position])
}

/**
 * =========================
 * Social / Progress
 * =========================
 */
model UserBadge {
  userId        String
  badgeKey      String
  showcased     Boolean @default(false)
  showcaseOrder Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, badgeKey])
  @@index([userId, showcased, showcaseOrder])
}

model StudyDay {
  userId String
  day    DateTime // UTC midnight
  count  Int      @default(1)
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, day])
  @@index([userId, day])
}

/**
 * One row per user per calendar date (Postgres DATE) with a simple counter.
 */
model StudyActivity {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  date      DateTime @db.Date
  studied   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId, date])
}

model Like {
  userId    String
  setId     String
  createdAt DateTime @default(now())

  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  set  StudySet @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@id([userId, setId])
  @@index([setId])
}

/**
 * =========================
 * Bayesian Knowledge Tracing (BKT)
 * =========================
 */
model Skill {
  id       String @id @default(cuid())
  name     String // display (casing preserved)
  nameNorm String @unique // lowercase + single-spaced + trimmed

  parentId String?
  parent   Skill?  @relation("SkillHierarchy", fields: [parentId], references: [id])
  children Skill[] @relation("SkillHierarchy")

  aliases SkillAlias[]
  params  BKTParams?

  // Reverse relations
  cards      CardSkill[]
  sets       StudySet[]         @relation("StudySet_defaultSkill")
  userSkills UserSkill[]
  masteries  UserSkillMastery[]
  responses  Response[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Personal library of skills a user “has”
model UserSkill {
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId   String
  createdAt DateTime @default(now())

  @@id([userId, skillId])
  @@index([skillId])
}

/**
 * Alternate labels for a skill (authoring/search convenience).
 */
model SkillAlias {
  id      String @id @default(cuid())
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId String
  label   String

  @@unique([skillId, label])
  @@index([label])
}

/**
 * Q-matrix mapping: which skills a card exercises (can be multi-skill).
 */
model CardSkill {
  card    Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId  String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId String
  weight  Float  @default(1.0)

  @@id([cardId, skillId])
  @@index([skillId])
}

/**
 * Global/skill-level BKT parameters.
 */
model BKTParams {
  skill    Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId  String @id
  pInit    Float
  pTransit Float
  slip     Float
  guess    Float
  forget   Float?

  updatedAt DateTime @updatedAt
}

model UserCardMastery {
  userId    String
  cardId    String
  pKnow     Float
  updatedAt DateTime @updatedAt

  @@id([userId, cardId])
  @@index([userId])
  @@index([cardId])
}

/**
 * Per-user belief of mastery for each skill: latest P(L_t).
 */
model UserSkillMastery {
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId   String
  pKnow     Float
  updatedAt DateTime @updatedAt

  @@id([userId, skillId])
  @@index([skillId])
}

/**
 * Raw response log for analytics and audit.
 * Denormalized skillId for fast skill-based queries.
 */
model Response {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  card       Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId     String
  skill      Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId    String
  correct    Boolean
  confidence Int?
  timeMs     Int?
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
  @@index([skillId, createdAt])
  @@index([cardId, createdAt])
}

/**
 * =========================
 * Duels (Arena / Team / Standard) — simplified (no pairs/lives/bye)
 * =========================
 */

enum DuelMode {
  ARENA
  TEAM
  STANDARD
}

enum DuelStatus {
  LOBBY
  RUNNING
  ENDED
  CANCELLED
}

enum RoundState {
  PENDING
  LIVE
  RESOLVED
}

enum DuelPlayerRole {
  PLAYER
  SPECTATOR
}

model DuelSession {
  id                 String     @id @default(cuid())
  code               String     @unique
  hostId             String
  host               User       @relation(fields: [hostId], references: [id], onDelete: Cascade)
  setId              String
  set                StudySet   @relation(fields: [setId], references: [id], onDelete: Cascade)
  mode               DuelMode
  status             DuelStatus @default(LOBBY)
  options            Json       @default("{}") // {timerMin, finite, shuffle, direction:"term|def|mixed"}
  initialPlayerCount Int        @default(0)
  createdAt          DateTime   @default(now())
  startedAt          DateTime?
  endedAt            DateTime?

  players DuelPlayer[]
  rounds  DuelRound[]

  @@index([hostId, createdAt])
  @@index([setId, createdAt])
}

model DuelPlayer {
  id           String         @id @default(cuid())
  sessionId    String
  session      DuelSession    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userId       String?
  user         User?          @relation(fields: [userId], references: [id], onDelete: SetNull)

  displayName  String
  role         DuelPlayerRole @default(PLAYER) // PLAYER or SPECTATOR

  // Kept: score/ready/connection and explicit finish flags
  score        Int            @default(0)
  isReady      Boolean        @default(false)
  connectedAt  DateTime       @default(now())
  lastSeenAt   DateTime?
  isFinished   Boolean        @default(false)
  finishedAt   DateTime?

  // Back-refs
  answers      DuelAnswer[]

  @@index([sessionId, role])
  @@index([userId])
}

model DuelRound {
  id             String      @id @default(cuid())
  sessionId      String
  session        DuelSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  roundNo        Int
  questionCardId String      // references Card.id (string)
  timerSec       Int
  state          RoundState  @default(PENDING)
  startedAt      DateTime?
  endedAt        DateTime?

  answers DuelAnswer[]

  @@unique([sessionId, roundNo])
  @@index([sessionId, state])
}

model DuelAnswer {
  id         String     @id @default(cuid())
  roundId    String
  round      DuelRound  @relation(fields: [roundId], references: [id], onDelete: Cascade)
  playerId   String
  player     DuelPlayer @relation(fields: [playerId], references: [id], onDelete: Cascade)

  choiceIndex Int
  isCorrect   Boolean
  responseMs  Int
  createdAt   DateTime @default(now())

  @@index([roundId, playerId])
  @@index([createdAt])
}
